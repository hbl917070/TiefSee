<UserControl x:Class="TiefSee.W.U_exif_item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TiefSee.W"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Border x:Name="border"
            BorderBrush="#3391DDFF"
            BorderThickness="0,0,0,1"
            Padding="3"
            Background="#00000000">
        <DockPanel>
            <TextBlock x:Name="text_type"
                       TextWrapping="Wrap"
                       Text="相機廠商"
                       Foreground="#FFA6E3FF"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       Width="100" Background="#00000000">
             
            </TextBlock>
            <TextBlock x:Name="text_value"
                       Text="NIKON CORPORATION"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource sol_白}">
          
            </TextBlock>
        </DockPanel>
    </Border>
</UserControl>
