<UserControl x:Class="TiefSee.W.U_menu_main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TiefSee.W"
             mc:Ignorable="d"
             Background="#00000000"
             ToolTipService.InitialShowDelay="1500">


    <Button x:Name="but"
            Style="{DynamicResource ButtonAccentRevealStyle_80}"
            Width="90"
            Height="75"
            Margin="0"
            Background="#00000000"
            BorderThickness="1">
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">


            <Label x:Name="lab_圖示"
                   Style="{DynamicResource icon_垃圾桶}"
                   Foreground="White"
                   UseLayoutRounding="False"
                   Margin="0,7,0,8" />



            <TextBlock x:Name="t_文字"
                       Text="其他開啟"
                       Padding="3,0"
                       Margin="0,0,0,5"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource sol_白}" />
        </StackPanel>
    </Button>
</UserControl>
